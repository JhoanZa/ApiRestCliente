@model ApiRestCliente.Models.ListaDatos
@{ ViewData["Title"] = "Index"; }

<center>
    <h1>Catalogo de productos</h1>
</center>
<br />
<a asp-controller="Producto" asp-action="Categoria" class="btn btn-primary">Agregar producto</a>

<p>

    @foreach (var producto in Model.Productos)
    {
    <h5>@Html.DisplayFor(modelItem => producto.Nombre)</h5>
        <div class="form-group">
            <label>Código: </label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.IdProducto)</label>
        </div>
        <div class="form-group">
            <label>Categoría:</label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.Categoria)</label>
        </div>
        <div class="form-group">
            <label>Nombre:</label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.Nombre)</label>
        </div>
        <div class="form-group">
            <label>Descripción:</label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.Descripcion)</label>
        </div>
        <div class="form-group">
            <label>Cantidad:</label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.CantidadDisponible)</label>
        </div>
        <div class="form-group">
            <label>Valor: </label>
            <br />
            <label>@Html.DisplayFor(modelItem => producto.ValorVenta)</label>
        </div>
        <br /><br />
    }
</p>