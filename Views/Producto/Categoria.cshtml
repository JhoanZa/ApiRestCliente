@model ApiRestCliente.Models.ListaDatos
@{ ViewData["Title"] = "Categoria"; }

<center>
    <h2>Registro de producto</h2>
</center>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <br /> <br />  <br />
            <h5>Paso 1: Por favor seleccione la categoría del producto, cuando esté listo presione el botón para seguir</h5>
            <br />
            <h5>Categoria:</h5>
            @Html.DropDownList("Categorias", Model.Categorias, new { @class = "form-control ddl", id = "Categorias"})
            <br />
            <a asp-controller="Producto" asp-action="CategoriaP2" class="btn btn-primary">Siguiente</a>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $(".ddl").on('change', function () {
            var a = $("#Categorias").val();
            $.getJSON('/Producto/AgregarCategoria', { a:a }, function (result) {
            });
        });
    </script>
}
