@model ApiRestCliente.Models.ListaDatos
<center>
    <h1>Datos de residencia</h1>
</center>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <br /> <br />  <br />
            <h5>Paso 2: Ingrese su municipio de residencia y su dirección, cuando termine presione el botón de confirmar:</h5>
            <br />
            <h5>Municipio:</h5>
            @Html.DropDownList("Municipios", Model.Municipios, new { @class = "form-control ddl", id = "Municipios", })
            <br />
            <form id="ConfirmarResidencia" method="post" novalidate="novalidate">
                <div class="form-group">
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button asp-action="DatosResidencia" type="submit" class="btn btn-primary">Regresar</button>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">confirmar</button>
                </div>
                
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $(".ddl").on('change', function () {
            var a = $("#Municipios").val();
            $.getJSON('/Usuario/ObtenerMunicipio', { a:a }, function (result) {
            });
        });
    </script>
}