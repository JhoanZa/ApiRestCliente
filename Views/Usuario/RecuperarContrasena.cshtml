@model ApiRestCliente.Models.ListaDatos
<center>
    <h2>Recuperar contraseña</h2>
</center>

<form id="RecuperarContraseña" method="post" novalidate="novalidate">
    <div class="col-md-5">
        <section>
            <br />
            <h5>Correo</h5>
            <hr />
            <div class="form-group">
                <label asp-for="Usuario.Correo"></label>
                <input asp-for="Usuario.Correo" class="form-control" />
                <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
            </div>
            <br />
            <h5>Contraseña</h5>
            <hr />
            <div class="form-group">
                <label asp-for="Usuario.Contrasena"></label>
                <input value="@Html.DisplayFor(model => Model.Usuario.Contrasena)" class="form-control" readonly />
            </div>
            <br />
            <div>
                <button id="credenciales-submit" type="submit" class="btn btn-primary">Recuperar</button>
            </div>
        </section>
    </div>
    <div class="col-md-5">
        <section>
            <!--Espacio para añadirle elementos a la derecha de la pagina-->
        </section>
    </div>
</form>
