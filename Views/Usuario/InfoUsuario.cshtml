@model ApiRestCliente.Models.ListaDatos

<center>
    <h1>Información de usuario</h1>
</center>

<div class="row">
    <div class="col-md-5">
        <section>
            <br />
            <h3>Datos de identificación:</h3>
            <h5>Nombre completo: </h5>
            <label>@Html.DisplayFor(model => Model.Usuario.PrimerNombre) @Html.DisplayFor(model => Model.Usuario.SegundoNombre) @Html.DisplayFor(model => Model.Usuario.PrimerApellido) @Html.DisplayFor(model => Model.Usuario.SegundoApellido)</label>
            <br />
            <h5>Fecha de nacimiento:</h5>
            <label>@Html.DisplayFor(model => Model.Usuario.FechaNacimiento)</label>
            <h5>Edad:</h5>
            <label>@Html.DisplayFor(model => Model.Usuario.Edad) años</label>
            <h5>Correo:</h5>
            <label>@Html.DisplayFor(model => Model.Usuario.Correo)</label>
            <br />
            <h3>Datos de ubicación:</h3>
            <h5>Departamento:</h5>
            <label>@Html.DisplayFor(model => Model.NombreDepartamento)</label>
            <h5>Municipio:</h5>
            <label>@Html.DisplayFor(model => Model.NombreMunicipio)</label>
            <h5>Dirección:</h5>
            <label>@Html.DisplayFor(model => Model.Direccion)</label>
            <br /> <br /> <br />
            <p>
                <a asp-action="DatosPersonales">Modificar datos personales</a>
            </p>
            <p>
                <a asp-action="DatosCredenciales">Modificar credenciales</a>
            </p>
            <p>
                <a asp-action="DatosResidencia">Modificar datos de residencia</a>
            </p>
        </section>
    </div>
</div>